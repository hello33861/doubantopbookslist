{
  "$schema": "../node_modules/@tauri-apps/cli/schema.json",
  "build": {
    "beforeBuildCommand": "mkdir -p .distDir && cp index.html .distDir/ && cp script.js .distDir/ && cp styles.css .distDir/ && cp books.json .distDir/",
    "beforeDevCommand": "python3 -m http.server 8000",
    "devPath": "http://127.0.0.1:8000",
    "distDir": "../.distDir"
  },
  "package": {
    "productName": "doubantopbooks",
    "version": "1.0.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "fs": {
        "all": true,
        "readFile": true,
        "writeFile": true,
        "readDir": true,
        "scope": ["**"]
      },
      "http": {
        "all": true,
        "request": true,
        "scope": ["https://**", "http://**"]
      }
    },
    "bundle": {
      "active": true,
      "category": "Education",
      "copyright": "",
      "deb": {
        "depends": []
      },
      "externalBin": [],
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "com.douban.topbooks",
      "longDescription": "豆瓣Top图书榜单应用",
      "macOS": {
        "entitlements": null,
        "exceptionDomain": "",
        "frameworks": [],
        "providerShortName": null,
        "signingIdentity": null
      },
      "resources": [],
      "shortDescription": "豆瓣Top图书榜单",
      "targets": ["deb", "msi", "app", "appimage"],
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": "",
        "webviewInstallMode": {
          "type": "downloadBootstrapper"
        }
      }
    },
    "security": {
      "csp": "default-src 'self' 'unsafe-inline' 'unsafe-eval' data: https://* http://*"
    },
    "windows": [
      {
        "fullscreen": false,
        "height": 600,
        "resizable": true,
        "title": "豆瓣Top图书",
        "width": 800,
        "decorations": true,
        "transparent": false
      }
    ]
  }
}
